@model DuoBudget.Models.ViewModels.IndexViewModel

<div class="col-xs-12 col-md-6 TableComponentContainer">
    <div style="display: flex; justify-content: center;">
        @Html.Partial("~/Views/UtilComponents/_VariableLoading.cshtml")
        <h3 class="text-center TextColor BudgetSheeTitle" data-toggle="modal" data-target="#VariableExpenseModal">  Variables Expenses <i class="fa fa-edit fa-1x"></i></h3>
    </div>

    <div id="VariableExpenseIndexBudgetContainer">@Html.Partial("~/Views/Home/Index/_VariableExpenseTable.cshtml", Model)</div>
</div>
<div class="col-xs-12 col-md-6 TableComponentContainer">
    <div style="display: flex; justify-content: center;">
        @Html.Partial("~/Views/UtilComponents/_FixedLoading.cshtml")
        <h3 class="text-center TextColor BudgetSheeTitle" data-toggle="modal" data-target="#FixedExpenseModal">Fixed Expenses <i class="fa fa-edit fa-1x"></i></h3>
    </div>

    <div id="FixedExpenseIndexBudgetContainer">@Html.Partial("~/Views/Home/Index/_FixedExpenseTable.cshtml", Model)</div>
</div>

@{
    if (Model.User.PartnerID == null)
    {//If no partner then have Split screen view take up 12 cols in bootstrap
        <div class="col-xs-12 col-md-12 TableComponentContainer SplitContainer">
            <h3 class="text-center TextColor BudgetSheeTitle" @*data-toggle="modal" data-target="#SplitExpenseModal"*@>My Split Expenses @*<i class="fa fa-edit fa-1x"></i>*@</h3>
            <div id="SplitExpenseTableContainer">@Html.Partial("~/Views/Home/Index/_SplitExpenseTable.cshtml", Model)</div>
        </div>
    }

    else
    {//Split 2 columns: One for User's Split expense and one for Partner's split expense
        <div class="col-xs-12 col-md-6 TableComponentContainer SplitContainer">
            <h3 class="text-center TextColor BudgetSheeTitle" @*data-toggle="modal" data-target="#SplitExpenseModal"*@>My Split Expenses @*<i class="fa fa-edit fa-1x"></i>*@</h3>
            <div id="SplitExpenseTableContainer">@Html.Partial("~/Views/Home/Index/_SplitExpenseTable.cshtml", Model)</div>
        </div>

        <div class="col-xs-12 col-md-6 TableComponentContainer SplitContainer">
            <h3 class="text-center TextColor BudgetSheeTitle" @*data-toggle="modal" data-target="#SplitExpenseModal"*@>Partners Split Expenses @*<i class="fa fa-edit fa-1x"></i>*@</h3>
            <div id="SplitExpenseTableContainer">@Html.Partial("~/Views/Home/Index/_PartnerSplitExpenseTable.cshtml", Model)</div>
        </div>
    }
}



